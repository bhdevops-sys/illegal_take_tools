{
   "schema": 
   {
       "$schema": "http://json-schema.org/draft-04/schema#",
       "title": "Resource use (resourceuse)",
     
       "type": "object",
       "required": ["resourceuse_type", "resourceuse_user_type", "resourceuse_observation",
       "evidence", "area", "resourceuse_users_sum", "resourceuse_evidence_sum",
       "resourceuse_action_taken"],

       "properties": 
       {
            "resourceuse_type": {
                "type": "string",
                "title": "Resource use type",
                 "enum": {{enum___resourceuse_type___values}},
               "enumNames": {{enum___resourceuse_type___names}} 
            },
            "resourceuse_user_type": {
                "type": "string",
                "title": "User type",
                 "enum": {{enum___user_type___values}},
               "enumNames": {{enum___user_type___names}} 
            }, 
            "resourceuse_observation": {
                "type": "string",
                "title": "Observation",
                 "enum": {{enum___observation___values}},
               "enumNames": {{enum___observation___names}}  
            }, 
            "evidence": {
                "type": "string",
                "title": "Evidence",
                "enum": {{enum___evidence___values}},
               "enumNames": {{enum___evidence___names}}
             },
             "area": {
                "type": "string",
                "title": "Area",
                 "enum": {{enum___area___values}},
               "enumNames": {{enum___area___names}}  
            },
            "resourceuse_users_sum": {
                "type": "number",
                "title": "Sum of users",
                "minimum": 0
            },   
             "resourceuse_evidence_sum": {
                "type": "number",
                "title": "Sum of evidence",
                "minimum": 0
            },  
             "resourceuse_action_taken":{
                "type": "string",
                "title": "Action taken",
                 "enum": {{enum___action_taken___values}},
               "enumNames": {{enum___action_taken___names}}  
            },
             "resourceuse_comments":{
                "type": "string",
                "title": "Comments"
            }

       }
   },
 "definition": [
    {
        "key":    "resourceuse_type",
        "htmlClass": "col-lg-6"
    }, 
    {
        "key":    "resourceuse_user_type",
        "htmlClass": "col-lg-6"
    }, 
    {
        "key":    "resourceuse_observation",
        "htmlClass": "col-lg-6"
    },
    {"key":    "evidence",
        "htmlClass": "col-lg-6"
    }, 
    {
        "key":    "area",
        "htmlClass": "col-lg-6"
    },
    {
        "key":    "resourceuse_users_sum",
        "htmlClass": "col-lg-6"
    }, 
    
    {
        "key":    "resourceuse_evidence_sum",
        "htmlClass": "col-lg-6"
    }, 
    {
        "key":    "resourceuse_action_taken",
        "htmlClass": "col-lg-6"
    }, 
    {
        "key":    "resourceuse_comments",
        "htmlClass": "col-lg-6"
    }
   
 ]
}

