{
   "schema": 
   {
       "$schema": "http://json-schema.org/draft-04/schema#",
       "title": "Mangrove logging (mangrovelogging)",
     
       "type": "object",
       "required": ["evidence", "area", "mangrovelogging_sum", 
       "mangrovelogging_arrestees", "mangrovelogging_escapees", "action_taken"],

       "properties": 
       {
            "evidence": {
                "type": "string",
                "title": "Evidence found",
                "enum": {{enum___evidence___values}},
               "enumNames": {{enum___evidence___names}}
            },
             "area": {
                "type": "string",
                "title": "Area",
                 "enum": {{enum___area___values}},
               "enumNames": {{enum___area___names}}
            },  
             "mangrovelogging_sum": {
                "type": "number",
                "title": "Sum of evidence",
                "minimum": 0
            },  
             "mangrovelogging_arrestees": {
                "type": "number",
                "title": "Number of arrestees",
                "minimum": 0
            }, 
            "mangrovelogging_escapees": {
                "type": "number",
                "title": "Number of escapees",
                "minimum": 0
            }, 
            "action_taken":{
                "type": "string",
                "title": "Action taken",
                "enum": {{enum___action_taken___values}},
                "enumNames": {{enum___action_taken___names}}
            },
             "mangrovelogging_comments":{
                "type": "string",
                "title": "Comments"
            }

       }
   },
 "definition": [
    {
        "key":    "evidence",
        "htmlClass": "col-lg-6"
    }, 
    {
        "key":    "area",
        "htmlClass": "col-lg-6"
    }, 
    {
        "key":    "mangrovelogging_sum",
        "htmlClass": "col-lg-6"
    }, 
    {
        "key":    "mangrovelogging_arrestees",
        "htmlClass": "col-lg-6"
    },
    {
        "key":    "mangrovelogging_escapees",
        "htmlClass": "col-lg-6"
    }, 
    
    {
        "key":    "action_taken",
        "htmlClass": "col-lg-6"
    }, 
    {
        "key":    "mangrovelogging_comments",
        "htmlClass": "col-lg-6"
    }
 ]
}

