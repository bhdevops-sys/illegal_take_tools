{
   "schema": 
   {
       "$schema": "http://json-schema.org/draft-04/schema#",
       "title": "Ambushes (ambushes)",
     
       "type": "object",
       "required": ["ambushes_target", "area", "recoveries", "ambushes_recoveries_sum", 
       "ambushes_arrestees", "ambushes_escapees"],

       "properties": 
       {
            "ambushes_target": {
                "type": "string",
                "title": "Ambush Target"
            },
             "area": {
                "type": "string",
                "title": "Area",
                 "enum": {{enum___area___values}},
               "enumNames": {{enum___area___names}}   
            },  
             "recoveries": {
                "type": "string",
                "title": "Recovered items",
                 "enum": {{enum___evidence___values}},
               "enumNames": {{enum___evidence___names}} 
            },  
             "ambushes_recoveries_sum": {
                "type": "number",
                "title": "Sum of recoveries",
                "minimum":0
            },  
             "ambushes_arrestees": {
                "type": "number",
                "title": "Number of arrestees",
                "minimum": 0
            }, 
            "ambushes_escapees": {
                "type": "number",
                "title": "Number of escapees",
                "minimum": 0
            }, 
            "ambushes_comments":{
                "type": "string",
                "title": "Comments"
            }

       }
   },
